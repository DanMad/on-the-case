{
  "collectCoverageFrom": ["<rootDir>/src/**/*.ts"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": -10
    }
  },
  "roots": ["<rootDir>/src"],
  "testMatch": ["**/*.test.ts"],
  "testPathIgnorePatterns": ["<rootDir>/node_modules/"],
  "verbose": true
}
